<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.Board.BoardAPI.mapper.BoardMapper">
    <insert id="createBoard" parameterType="com.Board.BoardAPI.domain.Board">
        INSERT INTO tbl_board (title, writer, content)
        VALUES
        (#{title}, #{writer}, #{content});
    </insert>

    <select id="getBoardList" parameterType="Long" resultType="com.Board.BoardAPI.domain.Board">
        SELECT boardId, title, writer, content
        FROM (SELECT ROWNUM AS NUM, tbl_board.* FROM tbl_board)
        WHERE NUM between (5*(#{page}-1)+1) and 5*#{page}
    </select>

    <select id="getBoard" parameterType="Long" resultType="com.Board.BoardAPI.domain.Board">
        SELECT
        *
        FROM tbl_board
        WHERE boardId=#{boardId}
    </select>

    <update id="updateBoard" parameterType="com.Board.BoardAPI.domain.Board">
        UPDATE tbl_board
        SET title=#{title}, content=#{content}
        WHERE boardId=#{boardId}
    </update>

    <delete id="deleteBoard" parameterType="Long">
        DELETE
        FROM tbl_board
        WHERE boardId=#{boardId}
    </delete>
</mapper>